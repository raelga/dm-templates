- name: {{ properties.name }}-k8s-kubeip-secret
  type: {{ env.project }}/{{ properties.name }}-k8s-type-v1:{{ K8S_SECRETS_COLLECTION }}
  properties:
    apiVersion: v1
    kind: Secret
    namespace: kube-system
    metadata:
      name: kubeip-key
      namespace: kube-system
      labels:
        app: kubeip
    data:
